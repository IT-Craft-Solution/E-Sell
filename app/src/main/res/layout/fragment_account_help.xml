<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AccountHelpFragment">

    <ImageView
        android:id="@+id/igHelpBackToAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12mdp"
        android:layout_marginTop="@dimen/_12mdp"
        android:padding="@dimen/_4mdp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12mdp"
        android:text="@string/help"
        android:textColor="@color/lightblack"
        android:textSize="@dimen/_18font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/igHelpBackToAccount"
        app:layout_constraintStart_toEndOf="@+id/igHelpBackToAccount"
        app:layout_constraintTop_toTopOf="@+id/igHelpBackToAccount" />


    <LinearLayout
        android:id="@+id/llAccountRateUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24mdp"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/igHelpBackToAccount"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="serif"
            android:text="Rate us"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_15font_mdp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If You Love our App , Please Take a moment to rate it."
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_9font_mdp"/>
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:background="@color/liteBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAccountRateUs" />


    <LinearLayout

        android:id="@+id/llAccountInvite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12mdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/llAccountRateUs"
        app:layout_constraintStart_toStartOf="@+id/llAccountRateUs"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="serif"
            android:text="Invite Friends To E-Sell"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_15font_mdp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Your Friends To Buy and Sell"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_9font_mdp" />
    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:background="@color/liteBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAccountInvite" />

    <LinearLayout

        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16mdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/llAccountInvite"
        app:layout_constraintStart_toStartOf="@+id/llAccountInvite"
        app:layout_constraintTop_toBottomOf="@+id/view6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Version"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_15font_mdp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V 1.0"
            android:textSize="@dimen/_9font_mdp"
            android:textColor="@color/lightblack" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1mdp"
        android:background="@color/liteBlack"
        android:layout_marginTop="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>