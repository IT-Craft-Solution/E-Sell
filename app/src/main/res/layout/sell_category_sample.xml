<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2mdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_90mdp"
        android:layout_margin="@dimen/_5mdp"
        android:background="@color/liteBlack"
        android:elevation="@dimen/_25mdp"
        app:cardCornerRadius="@dimen/_13mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/igSellCategorySample"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:background="#05000000"
                android:backgroundTint="@color/lightblue"
                android:contentDescription="@string/app_name"
                android:elevation="@dimen/_40mdp"
                android:src="@drawable/category" />

            <TextView
                android:id="@+id/txSellCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="All Category"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_11font_mdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>